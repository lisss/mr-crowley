{
    "name": "crowley",
    "version": "1.0.0",
    "description": "Web crawler with React TypeScript frontend",
    "scripts": {
        "build": "npm run build:less && tsc && node scripts/bundle.js",
        "build:less": "lessc static/css/styles.less static/css/styles.css",
        "build:vite": "vite build",
        "dev": "vite",
        "watch": "tsc --watch",
        "watch:less": "lessc --watch static/css/styles.less static/css/styles.css"
    },
    "devDependencies": {
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@vitejs/plugin-react": "^4.2.1",
        "less": "^4.4.2",
        "typescript": "^5.3.0",
        "vite": "^5.1.0"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "recharts": "^3.5.1"
    }
}
